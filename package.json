{
  "name": "create-nexcn",
  "version": "0.1.7",
  "description": "A Next.js 16 starter with TypeScript, Tailwind CSS v4, Base UI, internationalization, and testing configured out of the box",
  "keywords": [
    "nextjs",
    "nextjs-starter",
    "nextjs-boilerplate",
    "typescript",
    "tailwindcss",
    "tailwind-v4",
    "base-ui",
    "shadcn-ui",
    "next-intl",
    "i18n",
    "internationalization",
    "vitest",
    "playwright",
    "testing",
    "boilerplate",
    "starter-template",
    "cli"
  ],
  "homepage": "https://nexcn.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamed-g-shoaib/nexcn.git"
  },
  "bugs": {
    "url": "https://github.com/mohamed-g-shoaib/nexcn/issues"
  },
  "author": "Mohamed G. Shoaib",
  "license": "MIT",
  "bin": {
    "create-nexcn": "./cli/index.js"
  },
  "files": [
    "cli",
    "app",
    "components",
    "lib",
    "i18n",
    "messages",
    "public",
    "docs",
    "components.json",
    "next.config.ts",
    "tsconfig.json",
    "postcss.config.mjs",
    "eslint.config.mjs",
    "playwright.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "proxy.ts",
    ".prettierrc",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "prepublishOnly": "pnpm type-check && pnpm lint"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "simple-icons": "^16.8.0",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
